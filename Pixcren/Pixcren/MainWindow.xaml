<Window x:Class="Pixcren.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixcren"
        xmlns:myCtrl="clr-namespace:ControlLibraryCore20200620;assembly=ControlLibraryCore20200620"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400" ResizeMode="CanResizeWithGrip">
  <Window.Resources>
    <Style TargetType="CheckBox">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="12,0,5,0"/>
    </Style>
    <Style TargetType="RadioButton">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="5,0,15,0"/>
    </Style>    
  </Window.Resources>
  
  <Grid>
    <TabControl>
      <TabItem Header="キャプチャ">
        <StackPanel>

          <Button x:Name="MyButtonSaveState" Content="設定保存" Click="MyButtonSaveState_Click"/>
          <Button x:Name="MyButtonLoadState" Content="設定読み込み" Click="MyButtonLoadState_Click"/>

          <GroupBox Header="範囲">
            <StackPanel>
              <ComboBox Name="MyComboBoxCaputureRect" DisplayMemberPath="Value" SelectedValuePath="Key"
                        SelectedValue="{Binding Path=RectType}"/>
            </StackPanel>
          </GroupBox>
          <CheckBox x:Name="MyCheckBoxIsDrawCursor" Content="マウスカーソル描画する" IsChecked="{Binding Path=IsDrawCursor}"/>
          <Button Content="テストーーーーーーーーーーーー" Name="MyTestButton" Click="MyTestButton_Click"/>
          <Button Content="button"/>
          <StackPanel>
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="画像形式"/>
              <ComboBox Name="ComboBoxSaveFileType" SelectedItem="{Binding Path=ImageType}"/>
              <myCtrl:NumericUpDown MyValue="{Binding Path=JpegQuality}" MyMinValue="1" MyMaxValue="100" MyStringFormat="jpeg画質 = 000"/>
            </StackPanel>
            <DockPanel>
              <TextBlock Text="保存場所"/>
              <Button DockPanel.Dock="Right" x:Name="ButtonSaveDirectoryDelete" Content="削除" Click="ButtonSaveDirectoryDelete_Click"/>
              <Button DockPanel.Dock="Right" x:Name="ButtonSaveDirectoryAdd" Content="追加" Click="ButtonSaveDirectoryAdd_Click"/>
              <ComboBox DockPanel.Dock="Right" Name="MyComboBoxSaveDirectory" 
                        ItemsSource="{Binding Path=DirList}"
                        SelectedValue="{Binding Path=Dir}"
                        SelectedIndex="{Binding Path=DirIndex}"
                        IsEditable="True"/>
            </DockPanel>
            
            <StackPanel Orientation="Horizontal">
              <GroupBox Header="ファイル名">
                <StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <CheckBox Content="接頭辞" x:Name="MyCheckBoxFileNamePrefix"
                              IsChecked="{Binding Path=IsFileNamePrefix}"/>
                    <ComboBox Name="MyComboBoxFileNamePrefix" IsEditable="True"
                              ItemsSource="{Binding Path=FileNamePrefixList}"
                              SelectedValue="{Binding Path=FileNamePrefix}"/>
                    <Button x:Name="MyButtonAddFileNamePrefix" Content="追加" Tag="{Binding ElementName=MyComboBoxFileNamePrefix}"/>
                    <Button x:Name="MyButtonDeleteFileNamePrefix" Content="削除" Tag="{Binding ElementName=MyComboBoxFileNamePrefix}"/>
                    <CheckBox Content="接頭辞接続" x:Name="MyCheckBoxFileNamePrefixConnect"/>
                    <ComboBox Name="MyComboBoxFileNamePrefixConnect" IsEditable="True"/>
                  </StackPanel>
                  <GroupBox Header="数値">
                    <GroupBox.Resources>
                      <local:FileNameBaseConverter x:Key="MyFileNameConverter"/>
                      <local:StringFormatDigitConverter x:Key="MyStringFormatDigitConverter"/>
                    </GroupBox.Resources>
                    <StackPanel>
                      <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="MyRadioButtonFileNameDate" Content="日時" 
                               IsChecked="{Binding
                    Path=FileNameBaseType,
                    Converter={StaticResource MyFileNameConverter},
                    ConverterParameter=Date}"/>
                        <ComboBox Name="MyComboBoxFileNameDateFormat" IsEditable="True"/>
                      </StackPanel>
                      <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="MyRadioButtonFileNameSerial" Content="連番"
                               IsChecked="{Binding
                    Path=FileNameBaseType,
                    Converter={StaticResource MyFileNameConverter},
                    ConverterParameter=Serial}"/>
                        <myCtrl:NumericUpDown Name="MyNumericUpDownFileName"
                                              MyStringFormat="{Binding 
                          ElementName=MyNumericUpDownFileNameDigit,
                          Path=MyValue, Converter={StaticResource MyStringFormatDigitConverter}
                         }"
                                              MinWidth="80"/>
                        <myCtrl:NumericUpDown Name="MyNumericUpDownFileNameDigit" MyStringFormat="桁数：0" Margin="10,0,0,0"
                                              MinWidth="80" MySmallChange="1" MyLargeChange="1" MyMinValue="1" MyMaxValue="100"/>
                        <myCtrl:NumericUpDown Name="MyNumericUpDownFileNameIncreace" MyStringFormat="増加値：0;増加値：-0;増加値：0"
                                              MinWidth="100" MySmallChange="1" MyLargeChange="1" Margin="10,0,0,0"/>
                      </StackPanel>
                    </StackPanel>
                  </GroupBox>
                  <StackPanel Orientation="Horizontal">
                    <CheckBox Content="接尾辞接続" x:Name="MyCheckBoxFileNameSuffixConnect"/>
                    <ComboBox Name="MyComboBoxFileNameSuffixConnect" IsEditable="True"/>
                    <CheckBox Content="接尾辞" x:Name="MyCheckBoxFileNameSuffix"/>
                    <ComboBox Name="MyComboBoxFileNameSuffix" IsEditable="True"/>
                  </StackPanel>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="見本"/>
                    <TextBlock x:Name="MyTextBlockFileNameSmple"/>
                  </StackPanel>
                </StackPanel>
              </GroupBox>
            </StackPanel>
            <GroupBox Header="ホットキー" Name="MyGroupBoxHotKey">
              <DockPanel>
                <CheckBox Content="Alt" x:Name="MyCheckAlt" IsChecked="{Binding Path=HotkeyAlt}"/>
                <CheckBox Content="Ctrl" x:Name="MyCheckCtrl" IsChecked="{Binding Path=HotkeyCtrl}"/>
                <CheckBox Content="Shift" x:Name="MyCheckShift" IsChecked="{Binding Path=HotkeyShift}"/>
                <CheckBox Content="Win" x:Name="MyCheckWin" IsChecked="{Binding Path=HotkeyWin}"/>
                <ComboBox Name="MyComboBoxHotKey" IsEditable="True"
                          SelectedValue="{Binding Path=HotKey}"
                          PreviewKeyDown="MyComboBoxHotKey_PreviewKeyDown"
                          PreviewKeyUp="MyComboBoxHotKey_PreviewKeyUp"/>
                <!--<Button x:Name="MyButtonHotKeyRegist" Content="登録" Click="MyButtonHotKeyRegist_Click"/>-->
              </DockPanel>
            </GroupBox>
          </StackPanel>
        </StackPanel>
      </TabItem>

      <TabItem Header="保存">
      </TabItem>

    </TabControl>
  </Grid>
</Window>
