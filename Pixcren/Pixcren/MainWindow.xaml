<Window x:Class="Pixcren.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixcren"
        xmlns:myCtrl="clr-namespace:ControlLibraryCore20200620;assembly=ControlLibraryCore20200620"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
  <Grid>
    <TabControl>
      <TabItem Header="キャプチャ">
        <StackPanel>
          
          <Button x:Name="MyButtonSaveState" Content="設定保存" Click="MyButtonSaveState_Click"/>
          <Button x:Name="MyButtonLoadState" Content="設定読み込み" Click="MyButtonLoadState_Click"/>
          
          <GroupBox Header="範囲">
            <StackPanel>
              <ComboBox Name="MyComboBoxTest" DisplayMemberPath="Value" SelectedValuePath="Key"
                        SelectedValue="{Binding Path=RectType}"/>
              <RadioButton Content="ウィンドウ" IsChecked="True"/>
              <RadioButton Content="全体"/>
              <RadioButton Content="クライアント領域"/>
              <RadioButton Content="カーソル下"/>
            </StackPanel>
          </GroupBox>
          <CheckBox Content="マウスカーソル描画する" IsChecked="{Binding Path=IsDrawCursor}"/>
          <Button Content="test" Name="MyTestButton" Click="MyTestButton_Click"/>
          <Button Content="button"/>
        <StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="画像形式"/>
              <ComboBox Name="ComboBoxSaveFileType" SelectedItem="{Binding Path=ImageType}"/>
              <myCtrl:NumericUpDown MyValue="{Binding Path=JpegQuality}" MyMinValue="1" MyMaxValue="100" MyStringFormat="jpeg画質 = 000"/>
            </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="保存場所"/>
            <ComboBox Name="ComboBoxSaveDirectory" ItemsSource="{Binding Path=Dir}"/>
            <Button x:Name="ButtonSaveDirectoryAdd" Content="追加"/>
            <Button x:Name="ButtonSaveDirectoryDelete" Content="削除"/>
          </StackPanel>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="ファイル名"/>
            <TextBox Text="text"/>
          </StackPanel>

        </StackPanel>
        </StackPanel>
      </TabItem>

      <TabItem Header="保存">
      </TabItem>

    </TabControl>
  </Grid>
</Window>
