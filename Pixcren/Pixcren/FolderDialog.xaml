<Window x:Class="Pixcren.FolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pixcren"
        mc:Ignorable="d"
        Title="FolderDialog" Height="450" Width="600">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition  Height="0.15*" MaxHeight="60" MinHeight="40"/>
      <RowDefinition/>
      <RowDefinition Height="60"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <Button Content="ドキュメント" Name="ButtonMyDocuments" Width="100" Margin="10"/>
      <Button Content="ピクチャ" Name="ButtonMyPictures" Width="100" Margin="10"/>
      <Button Content="デスクトップ" Name="ButtonMyDesktop" Width="100" Margin="10"/>
      <Button Content="C:\" Name="ButtonDriveDirC" Width="100" Margin="10"/>
    </StackPanel>

    <TreeView Name="Root" Grid.Row="1" BorderThickness="0"/>

    <StackPanel Grid.Row="2" Orientation="Horizontal" FlowDirection="RightToLeft">
      <Button Name="ButtonCancel" Content="Cancel" Width="100" Margin="40,10,10,10"/>
      <Button Name="ButtonOk" Content="Ok" Width="100" Margin="10"/>
    </StackPanel>
  </Grid>
</Window>
